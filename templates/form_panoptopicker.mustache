{{!
    @template repository_panopto/form_panoptopicker

    Displays Panopto video thumbnail and title.

    Example context (json):
    {
        "name": "test",
        "thumburl": "URL"
    }
}}
<div>
    {{#name}}
        <div><label class="panoptopicker-area-title dimmed_text">{{#str}}title, repository_panopto{{/str}}</label><span>{{name}}</span></div>
        <div><label class="panoptopicker-area-title dimmed_text">{{#str}}created, repository_panopto{{/str}}</label><span>{{created}}</span></div>
        <div><label class="panoptopicker-area-title dimmed_text">{{#str}}duration, repository_panopto{{/str}}</label><span>{{duration}}</span></div>
        <div><label class="panoptopicker-area-title dimmed_text">{{#str}}viewerurl, repository_panopto{{/str}}</label><span><a href="{{viewerurl}}">{{#str}}viewonpanopto, repository_panopto{{/str}}</a></span></div>
        <img class="panoptopicker-area-thumbnail" src="{{thumburl}}" />
    {{/name}}
    {{^name}}
        <span>{{#str}}errorsessionnotfound, repository_panopto{{/str}}</span>
    {{/name}}
</div>