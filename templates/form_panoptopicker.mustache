{{!
    @template repository_panopto/form_panoptopicker

    Displays Panopto video thumbnail and title.

    Example context (json):
    {
        "name": "test",
        "thumburl": "URL"
    }
}}
<div>
    {{#name}}
        <div class="panoptopicker-area-title">{{name}}</div>
        <img class="panoptopicker-area-thumbnail" src="{{thumburl}}" />
    {{/name}}
    {{^name}}
        <span>{{#str}}errorsessionnotfound, repository_panopto{{/str}}</span>
    {{/name}}
</div>